<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_admin_menulist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.smartorder.smartorder.AdminMenuList">

    <TextView
        android:text="@string/picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblMenuPic"
        android:textSize="16sp"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="false"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnAddMenu"
        android:layout_alignEnd="@+id/btnAddMenu"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="97dp" />

    <TextView
        android:text="@string/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblMenuStatus"
        android:textSize="16sp"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="false"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/btnAddMenu"
        android:layout_alignLeft="@+id/lblMenuPrice"
        android:layout_alignStart="@+id/lblMenuPrice" />

    <TextView
        android:text="@string/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblMenuPrice"
        android:textSize="16sp"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="false"
        android:layout_above="@+id/lblMenuStatus"
        android:layout_alignLeft="@+id/lblMenuName"
        android:layout_alignStart="@+id/lblMenuName"
        android:layout_marginBottom="11dp" />

    <TextView
        android:text="@string/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblMenuName"
        android:textSize="16sp"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="false"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="31dp"
        android:layout_alignBottom="@+id/lblMenuPrice"
        android:layout_toLeftOf="@+id/lblMenuPic"
        android:layout_toStartOf="@+id/lblMenuPic" />

    <Button
        android:text="@string/add_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddMenu"
        android:textSize="16sp"
        android:minWidth="0dip"
        android:minHeight="0dip"
        android:layout_marginBottom="133dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Mohd Akmal"
        android:ems="12"
        android:textSize="15sp"
        android:minWidth="0dip"
        android:minHeight="0dip"
        android:id="@+id/txtMenuName"
        android:layout_alignBaseline="@+id/lblMenuName"
        android:layout_alignBottom="@+id/lblMenuName"
        android:layout_toRightOf="@+id/lblMenuStatus"
        android:layout_toEndOf="@+id/lblMenuStatus" />

</RelativeLayout>