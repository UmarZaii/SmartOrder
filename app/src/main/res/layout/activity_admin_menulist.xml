<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_admin_menulist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.smartorder.smartorder.AdminMenuList">

    <TextView
        android:text="@string/select_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtMenuType"
        android:textSize="16sp"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="false"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/view_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnViewMenuPage"
        android:onClick="viewMenuPage"
        android:textSize="16sp"
        android:minWidth="0dip"
        android:minHeight="0dip"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/spnMenuType"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtMenuType"
        android:layout_toRightOf="@+id/txtMenuType"
        android:layout_toEndOf="@+id/txtMenuType"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"></Spinner>

    <Button
        android:text="Manage Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddMenuPage"
        android:onClick="addMenuPage"
        android:textSize="16sp"
        android:minWidth="0dip"
        android:minHeight="0dip"
        android:layout_alignBaseline="@+id/txtMenuType"
        android:layout_alignBottom="@+id/txtMenuType"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
